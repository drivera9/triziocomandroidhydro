<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_crear_proceso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trizio.ram.com.triziocomandroidgradlenuevo.CrearProceso">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/appBarTheme"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textColor="@color/METRO_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del proceso"
            android:layout_gravity="center"
            android:textSize="30dp"/>

        <EditText
            style="@style/proyectoWMS_METRO_Theme.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/nombre"
            android:inputType="textCapCharacters"/>

        <Button
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="guardar"
            android:text="GUARDAR"
            style="@style/proyectoWMS_METRO_Theme.Button.AceptarLogin"/>


    </LinearLayout>

</RelativeLayout>
