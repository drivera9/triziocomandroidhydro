        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LayoutRelativeProcesos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
